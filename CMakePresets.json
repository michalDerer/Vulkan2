{

  "version": 9,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },


  "configurePresets": [
    {
      "name": "vs2022-x64-debug",
      "displayName": "Visual Studio 2022 x64 Debug",
      "description": "Generate Visual Studio 2022 project files for x64 Debug build",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/vs2022-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",

        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "vs2022-x64-release",
      "displayName": "Visual Studio 2022 x64 Release",
      "description": "Generate Visual Studio 2022 project files for x64 Release build",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/vs2022-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",

        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "makefiles-arm64-linux-debug",
      "displayName": "Makefiles arm64-linux Debug",
      "description": "Generate Makefiles project files for arm64-linux Debug build",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/makefiles-arm64-linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",

	    "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-linux"
      }
    },
    {
      "name": "makefiles-x64-linux-debug",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/makefiles-x64-linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",

	    "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake",
	    "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ],



  "buildPresets": [
    {
      "name": "vs2022-x64-debug",
      "configurePreset": "vs2022-x64-debug",
      "description": "Build the Debug x64 configuration using Visual Studio 2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-x64-release",
      "configurePreset": "vs2022-x64-release",
      "description": "Build the Release x64 configuration using Visual Studio 2022",
      "configuration": "Release"
    },
    {
      "name": "makefiles-arm64-linux-debug",
      "configurePreset": "makefiles-arm64-linux-debug",
      "description": "Build the Debug arm64-linux configuration using Makefiles",
      "configuration": "Debug"
    },
    {
      "name": "makefiles-x64-linux-debug",
      "configurePreset": "makefiles-x64-linux-debug",
      "configuration": "Debug"
    }
  ]
}
